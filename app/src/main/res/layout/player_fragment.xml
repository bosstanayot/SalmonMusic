<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="tanayot.barjord.musicplayerapplication.viewmodels.MusicListViewModel" />
    </data>
<LinearLayout
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/drag_me"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:src="@drawable/ic_expand_more_black_24dp" />
        <RelativeLayout
            android:id="@+id/collapesLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/collapes_playerView"
                android:paddingLeft="@dimen/grid_space_8"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    bind:musicImage="@{viewModel.currentSong.picUrl}" />
                <TextView
                    android:id="@+id/collapesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.currentSong.title}"
                    android:textSize="@dimen/text_size_18"
                    android:paddingLeft="@dimen/grid_space_8"
                    android:textColor="@color/ss_black" />
            </LinearLayout>

            <com.google.android.exoplayer2.ui.PlayerControlView
                android:id="@+id/collapes_playerView"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/grid_space_8"
                app:controller_layout_id="@layout/player_collapse_layout"
                app:show_timeout="0"/>
        </RelativeLayout>

    </RelativeLayout>
<LinearLayout
    android:id="@+id/expandLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="4">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        bind:musicImage="@{viewModel.currentSong.picUrl}"/>
    <!-- <com.google.android.exoplayer2.ui.PlayerView
         android:id="@+id/playerView"
         android:layout_width="match_parent"
         app:use_controller="false"
         android:layout_height="300dp"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/grid_space_20"
        android:textColor="@color/ss_black"
        android:textSize="@dimen/text_size_28"
        android:textStyle="bold"
        android:text="@{viewModel.currentSong.title}"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ss_black"
        android:textSize="@dimen/text_size_28"
        android:textStyle="normal"
        android:text="@{viewModel.currentSong.artist}"
        />

    <com.google.android.exoplayer2.ui.PlaybackControlView
        android:id="@+id/playerController"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:controller_layout_id="@layout/player_controler_view"
        app:show_timeout="0"
        />


</LinearLayout>

</LinearLayout>

</layout>